<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:textAlignment="center"
    android:visibility="visible">

    <ImageView
        android:id="@+id/logoPomoConnect"
        android:layout_width="425dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/pomo_connect" />


    <Button
        android:id="@+id/boutonAccueil"
        android:layout_width="108dp"
        android:layout_height="61dp"
        android:text="@string/boutonAccueil"
        app:layout_constraintBottom_toBottomOf="@+id/logoPomoConnect"
        app:layout_constraintEnd_toStartOf="@+id/logoPomoConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tacheExistanteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tacheExistanteText"
        app:layout_constraintBottom_toTopOf="@+id/copyrightText"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPomoConnect"
        app:layout_constraintVertical_bias="0.407" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="459dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toTopOf="@+id/copyrightText"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tacheExistanteText"
        app:layout_constraintVertical_bias="0.156" />

    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="300dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/copyrightText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPomoConnect" />

    <Button
        android:id="@+id/boutonCreerTache"
        android:layout_width="282dp"
        android:layout_height="103dp"
        android:text="@string/boutonCreerTache"
        app:layout_constraintBottom_toTopOf="@+id/copyrightText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/logoPomoConnect" />

    <TextView
        android:id="@+id/copyrightText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyrightText2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/copyrightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyrightText"
        app:layout_constraintBottom_toTopOf="@+id/copyrightText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>